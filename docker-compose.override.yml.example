# Docker Compose Override Example
# Copy this file to docker-compose.override.yml and customize for your environment
# This file is automatically loaded by docker-compose and can override/extend docker-compose.yml

version: '3.8'

services:
  postgres:
    # Development: Expose ports to host
    ports:
      - "127.0.0.1:5432:5432"  # Bind to localhost only for security

    # Development: Enable verbose logging
    command:
      - "postgres"
      - "-c"
      - "log_statement=all"
      - "-c"
      - "log_min_duration_statement=0"

    # Optional: Custom PostgreSQL configuration
    # volumes:
    #   - ./postgresql.conf:/etc/postgresql/postgresql.conf:ro

